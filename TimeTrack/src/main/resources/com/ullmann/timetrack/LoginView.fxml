<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ullmann.timetrack.controllers.LoginController"
            prefHeight="350.0" prefWidth="300.0">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Login" styleClass="headerLabel" />
            <HBox spacing="10" alignment="CENTER">
                <Label text="Username:" styleClass="inputLabel" />
                <TextField fx:id="usernameField" styleClass="inputField" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Password:" styleClass="inputLabel" />
                <PasswordField fx:id="passwordField" styleClass="inputField" />
            </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="loginButton" text="Login" styleClass="Button" onAction="#handleLogin" />
            <Button fx:id="registerButton" text="Registrieren" styleClass="Button" onAction="#handleRegister" />
        </HBox>
    </VBox>

</AnchorPane>
